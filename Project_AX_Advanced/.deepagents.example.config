# DeepAgents Configuration Example
# Copy this to .deepagents.config and customize

[filesystem]
# FileSystemBackend configuration
root_path = "."
max_file_size = 10485760  # 10MB
cache_dir = ".cache"

[llm]
# LLM configuration
model = "gpt-4o"
temperature = 0
max_tokens = 4000

[self_healing]
# Self-healing configuration
max_retries = 3
timeout_seconds = 30

[large_file]
# Large file handling
max_token_output = 4000
auto_summarize = true
cache_summaries = true

[human_in_loop]
# Human-in-the-Loop settings
require_approval_for_large_files = true
require_approval_for_code_changes = false  # Set true for production
require_approval_for_doc_changes = true

[testing]
# Test generation configuration
default_framework = "pytest"
generate_fixtures = true
generate_edge_cases = true
